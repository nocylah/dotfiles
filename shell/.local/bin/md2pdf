#!/bin/bash
FILE="$1"; shift
if [ ! -f "$FILE" ]; then return 1; fi

BDIR="build"
BPDF="build.pdf"

if [ ! -z "$1" ]; then BDIR="$1"; shift; fi
if [ ! -z "$1" ]; then BPDF="$1"; shift; fi

mkdir -p "$BDIR"
while true; do
    fwait "$FILE"
    pandoc \
           --filter pandoc-citeproc \
           "$FILE" -o "$BDIR/$BPDF"
    clear
    pdftotext -layout "$BDIR/$BPDF" -
done
